{
	"framework": "nextjs",
	"buildCommand": "npm run build",
	"outputDirectory": ".next",
	"installCommand": "npm install",
	"devCommand": "npm run dev",
	"regions": ["sin1"],
	"env": {
		"NEXT_PUBLIC_API_URL": "https://backend-webdev-azure.vercel.app/",
		"NEXT_PUBLIC_FRONTEND_URL": "https://frontend-webdev-inky.vercel.app/",
		"NEXT_PUBLIC_APP_NAME": "TradePro",
		"NEXT_PUBLIC_APP_DESCRIPTION": "Premium trade alerts, analysis and education for traders"
	},
	"headers": [
		{
			"source": "/(.*)",
			"headers": [
				{
					"key": "X-Content-Type-Options",
					"value": "nosniff"
				},
				{
					"key": "X-Frame-Options",
					"value": "DENY"
				},
				{
					"key": "X-XSS-Protection",
					"value": "1; mode=block"
				},
				{
					"key": "Referrer-Policy",
					"value": "strict-origin-when-cross-origin"
				}
			]
		}
	],
	"redirects": [
		{
			"source": "/home",
			"destination": "/",
			"permanent": true
		}
	]
}
